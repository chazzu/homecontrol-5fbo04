# Version: 1.0.0
# Description: Example environment variables for Smart Home Dashboard

# Application Core Settings
VITE_APP_NAME=Smart Home Dashboard
VITE_APP_VERSION=1.0.0
VITE_API_VERSION=v1

# Home Assistant Connection Settings
VITE_HA_URL=http://localhost:8123
VITE_HA_WS_URL=ws://localhost:8123/api/websocket

# Authentication Settings
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_TIMEOUT=30000

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RETRIES=5
VITE_WS_MESSAGE_TIMEOUT=10000

# Storage Configuration
VITE_STORAGE_PREFIX=smart_home_dashboard

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LOCALE=en